{% do _view.assign('title', 'Chat') %}

{{ helper_html_css('home') }}

<nav>
  <div class="wrapper">
    <div class="logo"><a href="#">Chat</a></div>
    <ul class="nav-links">
      <li>
        <a href="" class="desktop-item">{{ helper_Identity_get('name') }}</a>
        <ul class="drop-menu">
          <li><a href="#">Profile</a></li>
          <li>
            {{ helper_Form_create(null, {
                'url' : {
                'controller' : 'Users',
                'action' : 'logout'}
            }) }}
              <input type="submit" value="Logout">
            {{ helper_Form_end() }}
          </li>
        </ul>
      </li>
    </ul>
    <label for="menu-btn" class="btn menu-btn"><i class="fas fa-bars"></i></label>
  </div>
</nav>

<nav class="main-menu">
  <ul>
    <li>
      <a href="https://jbfarrow.com">
        <i class="fa fa-home fa-2x"></i>
        <span class="nav-text">
          Community Dashboard
        </span>
      </a>
    </li>

    <li>  
      <a href="#">
        <i class="fa fa-cogs fa-2x"></i>
        <span class="nav-text">
          Tools & Resources
        </span>
      </a>
    </li>
  </ul>

  <ul class="logout">
    <li>
      <a href="#">
        <i class="fa fa-power-off fa-2x"></i>
        <span class="nav-text">
          Logout
        </span>
      </a>
    </li>  
  </ul>
</nav>

<div class="body-text">
  <div class="text-messages">

    <div class="content">
      <ul class="chat-messages">
        <li class="me message">
          <p>teste message eu</p>
        </li>
        <li class="other message">
          <p>teste message tu</p>
        </li>
      </ul>
    </div>

  </div>
  
  <div class="chat-box">
    <form id="formMessage" method="post">
      <input type="hidden" name="_csrfToken" value="{{ _view.request.getAttribute('csrfToken') }}">
      <input type="hidden" name="name" value="{{ helper_Identity_get('name') }}">
      <div class="chat-input-box">
        <input class="chat-input" name="message" placeholder="message..." type="text">
        <input class="chat-button" type="submit" value="env">
      </div>
    </form>
  </div>
</div>

{{ helper_html_script('chat-message') }}
